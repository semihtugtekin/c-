using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace PT01_20231009_IlkProje
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // WriteLine -> İçerisine yazılan metni ekrana yazar
            // Console.WriteLine("Kadir");

            string ad; // ad değişkenin tipi string oldu
            ad = "kadir"; // ad değişkeninde değer atadım
            
            Console.WriteLine(ad); //ad değişkenini ekrana yazdırdım



            // Bu işaret ile yazılan satırlar açıklama satırı olarak algılanır
            // ReadKey -> Klavyeden bir tuşa basılan kadar bekler.
            Console.ReadKey();
        }
    }
}
